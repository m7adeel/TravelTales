<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button background for the pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5722" /> <!-- Adjust the color to the pressed state -->
            <corners android:radius="30dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Default button background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Button background color -->
            <stroke android:color="#FF5722" android:width="2dp" /> <!-- Border color and width -->
            <corners android:radius="30dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
